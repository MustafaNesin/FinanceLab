@inherits BaseComponent

@if (_user is not null)
{
    <MudContainer Fixed="true">
        <MudPaper Style="background-color: white" Height="400px" Width="100%" Square="true" Class="ml-4 mr-6 pt-1 pb-2">
            <MudAvatar Style="margin-left:45%" Typo="Typo.h6" Color="Color.Info">
                @_initials
            </MudAvatar>
            <MudText Style="padding-top: 20px" Align="Align.Center" Typo="Typo.h6">
                @L["FullName"]: @_fullName
            </MudText>
            <MudText Style="padding-top: 20px" Align="Align.Center" Typo="Typo.h6">
                @L["UserName"]: @UserName
            </MudText>
            <MudText Style="padding-top: 20px" Align="Align.Center" Typo="Typo.h6">
                @L["GameDifficulty"]: @L[_user.GameDifficulty.ToString()]
            </MudText>
            @if (_isAdmin == true || (_isSelf == true && _user.GameDifficulty == GameDifficulty.Sandbox))
            {
                <MudButton Style="background-color: black; color: white; alignment: center; margin-top: 10%; margin-left: 35%"
                           OnClick="@OpenDepositDialog">
                    @L["Deposit"]
                </MudButton>
            }
            @if (_isSelf == true)
            {
                <MudButton Style="background-color: black; color: white; alignment: center; margin-top: 10%; margin-left: 35%"
                           OnClick="@OpenNewGameDialog">
                    @L["NewGame"]
                </MudButton>
            }
        </MudPaper>
    </MudContainer>
}