@inherits BaseListComponent<WalletDto, WalletListOutput>

<MudTable ServerData="@GetTableDataAsync" @ref="@Table">
    <ToolBarContent>
        <MudText Typo="@Typo.h6">
            @L["WalletListOf", UserName]
        </MudText>
        <MudSpacer/>
        <MudTextField T="@string" ValueChanged="@OnSearch" Placeholder="@L["Search"]"
                      Adornment="@Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="@Size.Medium"/>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>
            <MudTableSortLabel SortLabel="@nameof(WalletDto.CoinCode)" T="@WalletDto">
                @L["Coin"]
            </MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortLabel="@nameof(WalletDto.Amount)" T="@WalletDto">
                @L["Amount"]
            </MudTableSortLabel>
        </MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="@L["Coin"]">
            @context.CoinCode
        </MudTd>
        <MudTd DataLabel="@L["Amount"]">
            @context.Amount
        </MudTd>
    </RowTemplate>
    <NoRecordsContent>
        <MudText>
            @L["NoRecordsFound"]
        </MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>
            @L["Loading"]
        </MudText>
    </LoadingContent>
    <PagerContent>
        @if (Environment.IsDevelopment())
        {
            <MudTablePager PageSizeOptions="@(new[] {1, 2, 3})"/>
        }
        else
        {
            <MudTablePager/>
        }
    </PagerContent>
</MudTable>