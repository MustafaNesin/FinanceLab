@inherits BaseComponent

<MudTabs Centered="@true" Color="@Color.Primary">
    <MudTabPanel Text="@L["Buy"]">
        <TradeTabComponent Side="@TradeSide.Buy"
                           Wallet="@_quoteWallet"
                           BaseCoinCode="@BaseCoinCode"
                           QuoteCoinCode="@QuoteCoinCode"
                           Trade="@TradeAsync"/>
    </MudTabPanel>
    <MudTabPanel Text="@L["Sell"]">
        <TradeTabComponent Side="@TradeSide.Sell"
                           Wallet="@_baseWallet"
                           BaseCoinCode="@BaseCoinCode"
                           QuoteCoinCode="@QuoteCoinCode"
                           Trade="@TradeAsync"/>
    </MudTabPanel>
</MudTabs>