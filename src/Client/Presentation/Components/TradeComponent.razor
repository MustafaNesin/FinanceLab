@inherits BaseComponent

<MudGrid>
    <MudItem xs="12" sm="6" md="4">
        <MudField Label="@L["BaseCoin"]" Variant="Variant.Filled" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.CheckCircle" AdornmentColor="Color.Success">@BaseCoinCode</MudField>
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
        <MudField Label="@L["QuoteCoin"]" Variant="Variant.Filled" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Money">@QuoteCoinCode</MudField>
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
        <MudField Label="@L["TradeSide"]" Variant="Variant.Filled" Adornment="Adornment.None" AdornmentIcon="@Icons.Material.Filled.Warning" AdornmentColor="Color.Warning">@Side</MudField>
    </MudItem>
</MudGrid>
<MudButton Variant="Variant.Filled" Color="Color.Primary">@L["Buy"]</MudButton>
<MudButton Variant="Variant.Filled" Color="Color.Secondary">@L["Sell"]</MudButton>