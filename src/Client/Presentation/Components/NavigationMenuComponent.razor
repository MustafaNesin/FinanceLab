@inherits BaseComponent

<MudAppBar DisableGutters="true" Class="muudstrap-navbar" 
           Style="color: white; background-color: black" Fixed="false" Elevation="0">
    <div style="color: white; background-color: black" class="d-none d-md-flex align-center px-12">
        <MudPaper style="color: white; background-color: black" Height="36px" Width="36px" Elevation="0"
                  Class="pa-1 rounded-lg d-flex justify-center align-center mud-theme-primary">
            <MudText Typo="Typo.h6">
                FL
            </MudText>
        </MudPaper>
        <MudText Style="color: white; background-color: black" Typo="Typo.h6" Class="ml-4 mr-12 pt-1 pb-2">
            Finance Lab
        </MudText>
        <AuthorizeView>
            <Authorized>
                <MudButton Style="color: white; background-color: black" Class="ml-4 mr-12 pt-1 pb-2" 
                           Color="Color.Dark" Href="/Markets">
                    Markets
                </MudButton>
                <MudButton Style="color: white; background-color: black" Class="ml-4 mr-12 pt-1 pb-2" 
                           Color="Color.Dark" Href="/Wallets">
                    Wallets
                </MudButton>
                <MudButton Style="color: white; background-color: black" Class="ml-4 mr-12 pt-1 pb-2" 
                           Color="Color.Dark" Href="/Trades">
                    Trades
                </MudButton>
                @if (StateContainer.User?.GameDifficulty == GameDifficulty.Sandbox)
                {
                    <MudButton Style="color: white; background-color: black" Class="ml-4 mr-12 pt-1 pb-2"
                               Color="Color.Dark" Href="/Transfers">
                        Transfers
                    </MudButton>
                    <MudButton Style="color: white; background-color: black" Class="ml-4 mr-12 pt-1 pb-2"
                               Color="Color.Dark" Href="/Transfers/Deposit">
                        Deposit
                    </MudButton>
                }
                @if (StateContainer.User?.Role == RoleConstants.Admin)
                {
                    <MudButton Style="color: white; background-color: black" Class="ml-4 mr-12 pt-1 pb-2"
                               Color="Color.Dark" Href="/Users">
                        Users
                    </MudButton>
                }
                <MudButton Style="color: white; background-color: black" Class="ml-4 mr-12 pt-1 pb-2" 
                           Color="Color.Dark" Href="/Dictionary">
                    Dictionary
                </MudButton>
                <MudButton Style="color: white; background-color: black" Class="ml-4 mr-12 pt-1 pb-2" 
                           Color="Color.Dark" Href="/SignOut">
                    Sign Out
                </MudButton>
                <MudMenu Color="Color.Inherit" Label="Language" EndIcon="@Icons.Material.Filled.Language" 
                         AnchorOrigin="Origin.BottomLeft" TransformOrigin="Origin.TopLeft">
                    <MudMenuItem Href="/action">
                        tr (TR)
                    </MudMenuItem>
                    <MudMenuItem Href="/another-action">
                        en (English)
                    </MudMenuItem>
                </MudMenu>
            </Authorized>
            <NotAuthorized>
                <MudButton Style="color: white; background-color: black" Class="ml-4 mr-12 pt-1 pb-2" 
                           Color="Color.Dark" Href="/Dictionary">
                    Dictionary
                </MudButton>
                <MudButton Style="color: white; background-color: black" Class="ml-4 mr-12 pt-1 pb-2" 
                           Color="Color.Dark" Href="/SignIn">
                    Sign In
                </MudButton>
                <MudButton Style="color: white; background-color: black" Class="ml-4 mr-12 pt-1 pb-2" 
                           Color="Color.Dark" Href="/SignUp">
                    Sign Up
                </MudButton>
                <MudMenu Color="Color.Inherit" Label="Language" EndIcon="@Icons.Material.Filled.Language" 
                         AnchorOrigin="Origin.BottomLeft" TransformOrigin="Origin.TopLeft">
                    <MudMenuItem Href="/action">
                        tr (TR)
                    </MudMenuItem>
                    <MudMenuItem Href="/another-action">
                        en (English)
                    </MudMenuItem>
                </MudMenu>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</MudAppBar>