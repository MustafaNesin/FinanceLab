@inherits BaseLayout
@inject IDialogService Dialog
<NavigationMenuComponent></NavigationMenuComponent>
<CultureSelectComponent/>
@Body
<div>
    <MudButton OnClick="@(e => OpenDialog(maxWidth))" Style="color: white ;background-color: black" Class="ml-4 mr-12 pt-1 pb-2" Color="Color.Dark">Start A New Game</MudButton>
</div>

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

@code
{
    // burası sonradan profil kısmına yollanacak
    readonly DialogOptions maxWidth = new() {MaxWidth = MaxWidth.Medium, FullWidth = true};

    private void OpenDialog(DialogOptions options)
    {
        Dialog.Show<NewGameComponent>("New Game", options);
    }
}
